<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventInfoFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardCornerRadius="15dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/societies_info_pic"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/staglogo" />

            <TextView
                android:id="@+id/societies_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Society name"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description:" />

            <TextView
                android:id="@+id/societies_info_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="here is a sample description of the society." />

        </LinearLayout>

        <ImageButton
            android:id="@+id/societies_info_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:background="@color/white"
            android:padding="5dp"
            android:src="@drawable/ic_close_black_24dp" />

    </android.support.v7.widget.CardView>

</FrameLayout>